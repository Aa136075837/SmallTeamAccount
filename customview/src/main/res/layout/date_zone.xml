<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="198dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_zone_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_date_tv_selector"
            android:padding="5dp"
            android:text="开始日期"
            android:textSize="12sp" />

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#ececec" />

        <TextView
            android:id="@+id/date_zone_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_date_tv_selector"
            android:padding="5dp"
            android:text="结束日期"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_zone_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <DatePicker
            android:id="@+id/date_zone_dp"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:descendantFocusability="blocksDescendants"
            android:scrollbarSize="12dp" />

        <TextView
            android:id="@+id/date_zone_btn"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_solid_tv_selector"
            android:gravity="center"
            android:padding="5dp"
            android:text="ok"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
